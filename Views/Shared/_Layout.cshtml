<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projet Héritage</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
    <link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
</head>
<body>
<div style="width: 100%; height: 100%; background-color: gray; color:gray"></div>
<div class="modal show" style="display: none" id="safariError" tabindex="2" data-backdrop="static" role="dialog" data-keyboard="false" aria-labelledby="waitPleaseModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Attention!</h5>
            </div>
            <div class="modal-body">
                <label>Safari n'est pas encore supporté sur la plateforme.<br>Veuillez utiliser Chrome, FireFox ou Opera.</label>
            </div>
        </div>
    </div>
</div>
<div class="navbar navbar-expand-sm navbar-light fixed-top navbar-light nav-bg">
    <div class="container">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        </button>
        <a id="logo" href="http://www.collegedescompagnons.com">
            <img class="d-inline-block mr-1 logo-image" alt="Logo" src="~/Images/logo_grad.png">
        </a>
        <a class="navbar-brand" href="/">
            <div class="d-inline-block mr-1 brand-text">Projet Héritage</div>
        </a>
        <div class="navbar-collapse collapse" id="navbarSupportedContent">
            @if (User.Identity.IsAuthenticated)
            {
                <ul class="nav navbar-nav mr-auto ml-auto">
                    <li id="gameListNavItem" class="nav-item"><a style="font-size: 18px; margin-left: 6px;margin-right: 6px" href="/Dashboard/Games" class="nav-link"><i style="font-size: 20px" class="fas fa-running"></i> Jeux</a></li>
                    <li id="codeListNavItem" class="nav-item"><a style="font-size: 18px;margin-left: 6px;margin-right: 6px" href="~/Dashboard/Keys" class="nav-link"><i class="fas fa-key"></i> Codes d'équipe</a></li>
                    <li id="commentListNavItem" class="nav-item"><a style="font-size: 18px;margin-left: 6px;margin-right: 6px" href="~/Dashboard/Comments" class="nav-link"><i class="fas fa-comments"></i> Commentaires</a></li>
                    <li id="SettingsNavItem" class="nav-item"><a style="font-size: 18px;margin-left: 6px;margin-right: 6px" href="~/Dashboard/Settings" class="nav-link"><i class="fas fa-sliders-h"></i> Paramètres</a></li>
                </ul>
            }
            <ul class="navbar-nav ml-auto">
                @Html.Partial("_LoginPartial")
            </ul>

        </div>
    </div>
</div>

<div class="container body-content my-4">
    @RenderBody()
</div>

@Scripts.Render("~/bundles/lib")
@RenderSection("scripts", required: false)
<script>
    var isSafari = navigator.vendor &&
        navigator.vendor.indexOf('Apple') > -1 &&
        navigator.userAgent &&
        navigator.userAgent.indexOf('CriOS') == -1 &&
        navigator.userAgent.indexOf('FxiOS') == -1;
    var isSafari2 = /^((?!chrome|android).)*safari/i.test(navigator.userAgent);
    var isSafari3 = window.safari !== undefined;
    if (isSafari || isSafari2 || isSafari3) {
        console.log("Safari!");
        $(".navbar").hide();
        $(".container").hide();
        $('#safariError').css({ "display": "initial" });
        $('body').css({ "background-color": "rgb(250, 117, 117)" });
    }
    
    var video = document.getElementsByTagName('video')[0];
    var minLogoWidth = 1300;
    if ($(window).width() < minLogoWidth) {
        $("#logo").hide();
    } else {
        $("#logo").show();
    }
    $(document).ready(function(e) {
        $("#detach-button-host").remove();
        $(window).resize(function() {
            if ($(this).width() < minLogoWidth) {
                $("#logo").fadeOut(250);
            } else {
                $("#logo").fadeIn(250);
            }
        });
    });
</script>
<script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>

</body>
</html>